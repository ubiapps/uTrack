doctype html5
html(lang='en')
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='shortcut icon', href='/favicon.ico')
    title uTrack UbiApps
    link(href='/libs/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/bootStyle.css', rel='stylesheet')
    script.
      var _deviceId = "#{deviceId}";
      var _routeDate = "#{routeDate}";
      var _routeIndex = #{routeIndex};
  body
    .navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/', style="position:fixed;")
            img(src="/css/logo.png", style="height:36px;")
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li
              a#journeySelector(href="#") select journey
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | analysis
                  b.caret
                ul.dropdown-menu
                  li
                    a(href="#") driver behaviour
                  li
                    a(href="#") vehicle metrics
            //
              li.dropdown
                button(class="btn btn-primary btn-lg",data-toggle="modal",data-target="#routeSelector") Launch demo modal

    .routeSelectorDialog.modal.fade#routeSelector(role="dialog", aria-labelledby="selectorLabel" aria-hidden="true")
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button",data-dismiss="modal",aria-hidden="true") &times;
            h4.modal-title#selectorLabel journey selector
          .modal-body
            ul.nav
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | select device
                  b.caret
                ul.dropdown-menu
                  each device in devices
                    if device !== _deviceId
                      li
                        a.deviceSelector(href="#", data-device="#{encodeURIComponent(device)}") #{device}
              li.dropdown.routeDatesDropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | select date
                  b.caret
                ul.dropdown-menu.routeDatesList
              li.dropdown.routeIndexDropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | select journey
                  b.caret
                ul.dropdown-menu.routeIndexList
          .modal-footer
    .routeMap
    .loading

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script(src='/libs/bootstrap/js/bootstrap.min.js')
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBdYy1RHr1ryZejV0uocIsAnOyY5G43smo&sensor=false")
    script(src="/js/mapping.js")
